@model productsApp.Models.Order


<h2 class= "mb-5">Adaugare comanda</h2>



@using (Html.BeginForm(actionName: "New", controllerName: "orders", method: FormMethod.Post))
{

    @Html.Label("Name", "Denumire colectie")
    <br />

    @Html.TextBox("Name", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">Adauga comanda</button>

}

